---
import { FaUser } from 'react-icons/fa';
---
<header>
    <nav class="buttons-container">
        <div class="left-container">
            <div class="image-container">
            <div class="skeleton"></div>
            <img
                src="https://github.com/mikeldev0.png"
                class="profile-image"
                alt="..yo"
                loading="lazy"
                onload="this.previousElementSibling.style.display='none'; this.classList.add('loaded');"
            />
            </div>
        </div>
        <div class="right-container">
            <a href="https://www.mikeldev.com" target="_blank" rel="noopener" class="nav-button portfolio" title="Mi Portfolio" aria-label="mikeldev.com">
                <span class="icon"><FaUser /></span>
            </a>
        </div>
    </nav>
</header>

<style>
    .left-container {
        position: static;
        display: flex;
        align-items: center;
    }

    .right-container {
        display: flex;
        gap: 1rem;
    }

    .profile-image {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        object-fit: cover;
        transition: all 0.8s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .image-container {
        position: relative;
    }

    .skeleton {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        background: linear-gradient(225deg, #ccc 25%, #e0e0e0 50%, #ccc 75%);
        background-size: 200% 100%;
        position: absolute;
        top: 0;
        left: 0;
        animation: loading 1.5s infinite;
    }

    @keyframes loading {
        0% {
            background-position: -200% 0;
        }
        100% {
            background-position: 200% 0;
        }
    }

    @media (min-width: 769px) {
        .profile-image.loaded:hover {
            transform: rotate(360deg) scale(1.2);
            box-shadow: 0 0 15px rgba(255, 215, 0, 0.6);
        }
    }

    @media (max-width: 768px) {
        .left-container {
            position: static;
            margin-bottom: 0.5rem;
        }

        .profile-image {
            width: 35px;
            height: 35px;
            margin-top: 0.5rem; /* Alinear con el bot칩n de navegaci칩n */
        }

        .image-container {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .skeleton {
            margin-top: 0.5rem;
            z-index: 1;
            width: 35px;
            height: 35px;
        }
    
        
        .profile-image.loaded:active {
            transform: rotate(360deg) scale(1.2);
            box-shadow: 0 0 15px rgba(255, 215, 0, 0.6);
        }
    }
    header {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        z-index: 1000;
    }
    .buttons-container {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 1rem;
        gap: 1rem;
        flex-wrap: wrap; /* Permitir que los botones se envuelvan en pantallas peque침as */
    }

    .nav-button {
        padding: 0.5rem 1rem;
        color: #333333;
        text-decoration: none;
        border: 1px solid #4444;
        border-radius: 0.5rem;
        display: flex;
        align-items: center;
        transition: all 0.2s;
        justify-content: center; /* Centrar el contenido del bot칩n */
    }

    .nav-button:hover {
        border: 1px solid #ffd700;
        background: linear-gradient(45deg, #ffd700, #ff9900);
		color: #fff;
		transform: translateY(-2px);
		box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

    .portfolio {
        position: relative;
        min-width: 6rem;
        min-height: 1rem;
        overflow: hidden;
    }

    .portfolio .icon {
        margin-right: 6rem;
    }

    .portfolio::before {
        content: "Mi Portfolio";
        position: absolute;
        left: 60%;
        top: 50%;
        transform: translate(-50%, -50%);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        white-space: nowrap;
    }
    
    .portfolio::after {
        content: "mikeldev.com";
        position: absolute;
        left: 60%;
        top: 50%;
        transform: translate(-50%, 100%);
        opacity: 0;
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        white-space: nowrap;
    }

    .portfolio:hover::before {
        opacity: 0;
        transform: translate(-50%, -100%);
    }

    .portfolio:hover::after {
        opacity: 1;
        transform: translate(-50%, -50%);
    }

    @media (max-width: 768px) {
        .buttons-container {
            position: static;
            justify-content: center;
        }

        .nav-button {
            font-size: 0.9rem;
            margin: 0;
        }
    }
</style>

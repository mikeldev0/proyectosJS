---
import Card from './Card.astro';

interface Proyectos {
    img: string;
    title: string;
    description: string;
    demo?: string;
    source?: string;
}

const proyectos: Proyectos[] = [
    {
        img: 'https://github.com/mikeldev0/WebLLM-local/blob/main/media/screenshot.png?raw=true',
        title: 'Chatbot LLM con WebGPU',
        description: 'Chatbot desarrollado con WebGPU en el que puedes interactuar con un asistente virtual ejecutado 100% en tu equipo local.',
        demo: 'https://chat.mikeldev.com',
        source: 'https://github.com/mikeldev0/WebLLM-local'
    },
    {
        img: 'https://github.com/mikeldev0/markdownAnything/raw/refs/heads/main/assets/images/preview.webp ',
        title: 'MarkdownAnything',
        description: 'Convierte cualquier documento a Markdown con un simple drag and drop. Ideal para crear contenido web de forma rápida. (Solo funciona en local por tema backend)',
        demo: "https://mikeldev0.github.io/markdownAnything",
        source: 'https://github.com/mikeldev0/markdownAnything'
    },
    {
        img: '/proyectos/geo_ip_preview.webp',
        title: 'Geo Localiza una IP',
        description: 'Geo localiza una IP y muestra información relevante como el país, ciudad, región, latitud y longitud.',
        demo: '/proyectos/api-geo-ip',
        source: 'https://github.com/mikeldev0/proyectosJS/tree/main/src/pages/proyectos/api-geo-ip'
    },
    {
        img: '/proyectos/markdown_visualizer_preview.webp',
        title: 'Visualizador de Markdown',
        description: 'Visualiza el contenido de un archivo Markdown en tiempo real. Ideal para ver cómo se vería tu contenido en un blog o página web.',
        demo: '/proyectos/markdown-visualizer',
        source: 'https://github.com/mikeldev0/proyectosJS/tree/main/src/pages/proyectos/markdown-visualizer'
    },
    {
        img: '/proyectos/weather_app_preview.webp',
        title: 'Weather App',
        description: 'Consulta el clima de cualquier ciudad del mundo. Muestra información como la temperatura, humedad, velocidad del viento y más.',
        demo: '/proyectos/weather-app',
        source: 'https://github.com/mikeldev0/proyectosJS/tree/main/src/pages/proyectos/weather-app'
    },
    {
        img: '/proyectos/qr-generator_preview.webp',
        title: 'Generador de Códigos QR',
        description: 'Genera códigos QR personalizados con la información que desees. Puedes descargar el código QR generado en formato PNG.',
        demo: '/proyectos/qr-generator',
        source: 'https://github.com/mikeldev0/proyectosJS/tree/main/src/pages/proyectos/qr-generator'
    }
]
---

<section id="proyectos" aria-label="Sección de proyectos">
    <div class="header-section">
        <h2>Proyectos</h2>
        <meta name="description" content="Proyectos web desarrollados con JavaScript vanilla, incluyendo aplicaciones interactivas y ejemplos prácticos">
    </div>

    <div class="proyectos">
    {proyectos.map((proyecto) => (
        <Card proyecto={proyecto} />
    ))}
    </div>
</section>

<style>
    .header-section {
        text-align: center;
        padding: 2rem clamp(1rem, 5vw, 3rem);
    }

    h2 {
        font-size: clamp(3rem, 6vw, 4rem);
        font-weight: 900;
        background: linear-gradient(90deg, #000000, #666666);
        -webkit-background-clip: text;
        -webkit-text-fill-color: transparent;
        margin-bottom: 1.5rem;
    }

    h2::after {
        content: '';
        display: block;
        width: 60px;
        height: 4px;
        background: #333;
        margin: 1rem auto;
        border-radius: 2px;
    }

    p {
        font-size: clamp(1rem, 2vw, 1.25rem);
        line-height: 1.8;
        color: #4b5563;
        max-width: 800px;
        margin: 0 auto;
    }

    .proyectos {
        padding: 4rem clamp(1rem, 5vw, 4rem);
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(300px, 350px));
        gap: 2rem;
        justify-content: center;
    }
    #proyectos {
        background: linear-gradient(145deg, #ffffff, #f0f0f0);
    }

    @media (max-width: 768px) {
        .proyectos {
            padding: 3rem 1rem;
        }

        h2 {
            font-size: 2.5rem;
        }

        p {
            text-wrap: pretty;
            font-size: 1.1rem;
        }
    }
</style>
